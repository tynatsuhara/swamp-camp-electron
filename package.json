{
    "name": "swamp-camp-electron",
    "description": "Produces SWAMP CAMP native desktop builds",
    "version": "1.0.0",
    "private": true,
    "author": "Ty Natsuhara",
    "main": "packages/main/dist/index.cjs",
    "scripts": {
        "build": "npm run build:main && npm run build:preload && npm run copy:renderer",
        "build:main": "cd ./packages/main && vite build",
        "build:preload": "cd ./packages/preload && vite build",
        "copy:renderer": "rm -rf ./packages/renderer/dist && cp -r ../swamp.camp/static ./packages/renderer && mv ./packages/renderer/static ./packages/renderer/dist",
        "compile": "cross-env MODE=production npm run build && electron-builder build --config .electron-builder.config.js --dir --config.asar=false",
        "test": "npm run test:main && npm run test:preload",
        "test:main": "vitest run -r packages/main --passWithNoTests",
        "test:preload": "vitest run -r packages/preload --passWithNoTests",
        "watch": "node scripts/watch.mjs",
        "postinstall": "cross-env ELECTRON_RUN_AS_NODE=1 electron scripts/update-electron-vendors.mjs",
        "format": "npx prettier --write ."
    },
    "devDependencies": {
        "@types/node": "18.15.11",
        "cross-env": "7.0.3",
        "electron": "^24.0.0",
        "electron-builder": "^23.6.0",
        "prettier": "^2.8.7",
        "typescript": "5.0.3",
        "vite": "4.2.1",
        "vitest": "0.29.8"
    },
    "dependencies": {
        "electron-updater": "5.3.0"
    }
}
